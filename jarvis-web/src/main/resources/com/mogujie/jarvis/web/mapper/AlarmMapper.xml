<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mogujie.jarvis.web.mapper.AlarmMapper">

    <select id="getAllAlarmsByJobId" parameterType="Long" resultType="AlarmVo">
      SELECT * FROM alarm WHERE jobId=#{_parameter}
    </select>

    <select id="getEnableAlarmsByJobId" parameterType="Long" resultType="AlarmVo">
        SELECT * FROM alarm WHERE jobId=#{_parameter} AND status=1;
    </select>

</mapper>